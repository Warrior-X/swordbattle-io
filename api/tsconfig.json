{
    "compilerOptions": {
      "target": "esnext",
      "module": "CommonJS",
  
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
  
      "allowJs": true,
      "allowUnreachableCode": false,
      "noImplicitAny": false,
      "sourceMap": true,
      "strictPropertyInitialization": false,
  
      "moduleResolution": "node",
      "lib": ["dom", "esnext"],
    },
    "include": ["**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
  }

